{
  "kind": "collectionType",
  "collectionName": "driver_profiles",
  "info": {
    "singularName": "driver-profile",
    "pluralName": "driver-profiles",
    "displayName": "DriverProfile",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "userid": {
      "type": "biginteger"
    },
    "premium_user": {
      "type": "boolean",
      "default": false
    },
    "certified": {
      "type": "boolean",
      "default": false
    },
    "licensed": {
      "type": "boolean",
      "default": false
    },
    "driving_license_front": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "drivers_license_back": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "driving_certificate_front": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "driving_certificate_back": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "details": {
      "type": "component",
      "repeatable": false,
      "component": "users.user-profile"
    },
    "experience": {
      "type": "integer"
    },
    "available_for_hire": {
      "type": "boolean",
      "default": true
    },
    "jobs": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::job.job",
      "mappedBy": "applicants"
    },
    "application_points": {
      "type": "integer",
      "default": 10
    },
    "nrc_front": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "nrc_back": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "driver_category": {
      "type": "enumeration",
      "enum": [
        "truck",
        "taxi",
        "tractor",
        "big-bus",
        "mini-bus",
        "canter",
        "heavy-duty",
        "noah",
        "other"
      ],
      "default": "other"
    },
    "featured": {
      "type": "boolean",
      "default": false
    }
  }
}
